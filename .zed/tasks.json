[
  {
    "label": "CMake: configure (Debug)",
    "command": "make",
    "args": [
      "configure",
      "CMAKE_BUILD_TYPE=Debug",
    ],
  },
  {
    "label": "CMake: configure (Release)",
    "command": "make",
    "args": [
      "configure-release",
    ],
  },
  {
    "label": "CMake: build",
    "command": "make",
    "args": [
      "build",
    ],
  },
  {
    "label": "CTest: run tests",
    "command": "make",
    "args": ["test"],
  },
  {
    "label": "Run integration test (interactive)",
    "command": "make",
    "args": [
      "integration-test",
    ],
    "env": {
      "AXIDEV_IO_RUN_INTEGRATION_TESTS": "1",
      "AXIDEV_IO_INTERACTIVE": "1",
    },
  },
  {
    "label": "Run consumer (help)",
    "command": "make",
    "args": [
      "run-consumer",
      "RUN_ARGS=--help",
    ],
  },
  {
    "label": "Run unit tests (binary)",
    "command": "make",
    "args": [
      "run-unit-tests",
    ],
  },
  {
    "label": "Export compile_commands.json",
    "command": "make",
    "args": [
      "export-compile-commands",
    ],
  },
  {
    "label": "Clean",
    "command": "make",
    "args": [
      "clean",
    ],
  },
]
